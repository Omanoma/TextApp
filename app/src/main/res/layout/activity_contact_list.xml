<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    tools:context=".Contact_List">

    <EditText
        android:id="@+id/editText"
        android:layout_width="344dp"
        android:layout_height="57dp"
        android:layout_below="@+id/mess"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/searchbar"
        android:elevation="10dp"
        android:hint="@string/search"
        android:inputType="textLongMessage"
        android:padding="10dp"
        android:shadowColor="@color/black"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorHint="#757575"
        android:autofillHints="" />

    <TextView
        android:id="@+id/mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:text="@string/messages"
        android:textSize="30sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="wrap_content"
        android:layout_height="814dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        tools:ignore="TextSizeCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:background="@drawable/input2"
        android:elevation="10dp"
        app:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:contentDescription="Message"
            android:src="@drawable/message"
            tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />

        <View
            android:id="@+id/view2"
            android:layout_width="65dip"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_"
            android:contentDescription="Contact"
            android:src="@drawable/contact_"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:id="@+id/view3"
            android:layout_width="65dip"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/setting"
            android:contentDescription="Setting"
            android:src="@drawable/setting"
            app:layout_row="0"
            tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />
    </LinearLayout>
</RelativeLayout>